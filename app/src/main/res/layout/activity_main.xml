<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.cardview.widget.CardView
        android:id="@+id/stopwatch"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:outlineAmbientShadowColor="@color/white"
        app:cardBackgroundColor="#EDEFEF"
        app:cardCornerRadius="1000dp"
        app:cardElevation="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:rotationX="0"
            app:cardCornerRadius="1000dp"
            app:cardElevation="5dp">

            <TextView
                android:id="@+id/timeTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:gravity="center"
                android:text="00:00.00"
                android:textColor="@color/black"
                android:textSize="28sp" />

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

    <ScrollView
        android:id="@+id/noteTimeScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toTopOf="@+id/buttonsLine"
        app:layout_constraintTop_toBottomOf="@+id/stopwatch">


    </ScrollView>

    <LinearLayout
        android:id="@+id/buttonsLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="#FFFCFC"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardElevation="20dp"
            android:outlineAmbientShadowColor="@color/teal_700"
            app:cardCornerRadius="100dp">

            <ImageButton
                android:id="@+id/resetButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:alpha="0.2"
                android:clickable="false"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@color/white"
                android:scaleType="fitXY"
                android:src="@drawable/restart"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center">

        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="@color/teal_700"

            android:layout_width="50dp"
            android:layout_marginLeft="30dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:cardElevation="20dp"
            android:outlineAmbientShadowColor="@color/teal_700"
            app:cardCornerRadius="100dp">

            <ImageButton
                android:id="@+id/startButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@color/teal_700"
                android:scaleType="fitXY"
                android:src="@android:drawable/ic_media_play"/>

        </androidx.cardview.widget.CardView>
        </LinearLayout>


        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="#FFFCFC"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardElevation="20dp"
            android:outlineAmbientShadowColor="@color/teal_700"
            app:cardCornerRadius="100dp">

            <ImageButton
                android:id="@+id/takeNoteButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:alpha="0.2"
                android:clickable="false"
                android:layout_margin="10dp"
                android:background="@color/white"
                android:scaleType="fitXY"
                android:src="@drawable/timenote"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>